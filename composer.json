{
    "name": "watson/aggregate",
    "description": "Extend Laravel's query builder with additional relation aggregates.",
    "keywords": [
        "laravel",
        "eloquent",
        "aggregations"
    ],
    "homepage": "https://github.com/dwightwatson/aggregate",
    "license": "MIT",
    "authors": [
        {
            "name": "Dwight Watson",
            "email": "dwight@studiousapp.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/database": "~6.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "~4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Watson\\Aggregate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Watson\\Aggregate\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Watson\\Aggregate\\AggregateServiceProvider"
            ]
        }
    }
}
